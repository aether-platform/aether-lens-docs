---
const { tagline, actions = [] } = Astro.props;
import { LinkButton } from "@astrojs/starlight/components";

const slides = [
  {
    title: "Vibe Test Insight",
    sub: "Accelerate Your Development Cycle",
    detail:
      "AIがコードの「意図」を読み取り、最適なテストとフィードバックを即座に提供します。",
  },
  {
    title: "Continuous Local CI",
    sub: "Zero-Config Kubernetes Native",
    detail:
      "クラウドのパワーをローカルの速度で。開発者の思考を止めないインフラストラクチャ。",
  },
  {
    title: "Aggregation Layer",
    sub: "Unified Insight for Multi-Layer Tests",
    detail:
      "ユニットテストからVRTまで、あらゆるレイヤーの検証を統合し、根本原因を特定します。",
  },
];
---

<div class="hero-wrapper">
  <div class="glow-sphere"></div>

  <div class="hero-content">
    <div class="branding">
      <span class="aether-lens">Aether Lens</span>
      <span class="separator">|</span>
      <span class="new-value">New Value "Vibe Test Insights"</span>
      <span class="by">by</span>
      <span class="platform">Aether Platform</span>
    </div>

    <div class="carousel" id="hero-carousel">
      <div class="carousel-inner">
        {
          slides.map((slide, index) => (
            <div
              class={`slide ${index === 0 ? "active" : ""}`}
              data-index={index}
            >
              <h1 class="gradient-text">{slide.title}</h1>
              <p class="sub-heading">{slide.sub}</p>
              <p class="detail-text">{slide.detail}</p>
            </div>
          ))
        }
      </div>

      <div class="carousel-nav">
        {
          slides.map((_, index) => (
            <button
              class={`nav-dot ${index === 0 ? "active" : ""}`}
              data-index={index}
              aria-label={`Go to slide ${index + 1}`}
            />
          ))
        }
      </div>
    </div>

    <div class="hero-actions">
      {
        actions.map((action: any) => (
          <LinkButton
            href={action.link}
            variant={action.variant}
            icon={action.icon}
          >
            {action.text}
          </LinkButton>
        ))
      }
    </div>

    {/* Visual Anchor: Terminal / Dashboard Mockup */}
    <div class="visual-anchor">
      <div class="terminal-window">
        <div class="terminal-header">
          <div class="buttons">
            <span class="dot red"></span>
            <span class="dot yellow"></span>
            <span class="dot green"></span>
          </div>
          <div class="terminal-title">aether-lens --watch</div>
        </div>
        <div class="terminal-body">
          <div class="line">
            <span class="cmd">aether-lens</span> init <span class="success"
              >✔ done</span
            >
          </div>
          <div class="line">
            <span class="info">i</span> Watching for changes in <span
              class="path">src/</span
            >...
          </div>
          <div class="line">
            <span class="highlight">Change detected:</span> CustomHero.astro
          </div>
          <div class="line">
            Running <span class="type">Vibe Analysis</span>...
          </div>
          <div class="line">
            <span class="success">✔ Visual Regression passed (3 viewports)</span
            >
          </div>
          <div class="line">
            <span class="insight">Insight:</span> "Hero component aesthetics improved.
            Performance within limits."
          </div>
          <div class="cursor"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const carousel = document.getElementById("hero-carousel");
  if (carousel) {
    const slides = carousel.querySelectorAll(".slide");
    const dots = carousel.querySelectorAll(".nav-dot");
    let currentIndex = 0;
    let interval: any;

    const showSlide = (index: number) => {
      slides.forEach((s) => s.classList.remove("active"));
      dots.forEach((d) => d.classList.remove("active"));

      slides[index].classList.add("active");
      dots[index].classList.add("active");
      currentIndex = index;
    };

    const nextSlide = () => {
      showSlide((currentIndex + 1) % slides.length);
    };

    const startAutoPlay = () => {
      interval = setInterval(nextSlide, 5000);
    };

    dots.forEach((dot) => {
      dot.addEventListener("click", () => {
        clearInterval(interval);
        const index = parseInt(dot.getAttribute("data-index") || "0");
        showSlide(index);
        startAutoPlay();
      });
    });

    startAutoPlay();
  }
</script>

<style>
  .hero-wrapper {
    position: relative;
    width: 100vw;
    min-height: 90vh;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #030712; /* Very dark slate */
    overflow: hidden;
    padding: 6rem 2rem;
  }

  .glow-sphere {
    position: absolute;
    width: 60vw;
    height: 60vw;
    background: radial-gradient(
      circle,
      var(--color-aether-primary),
      transparent 70%
    );
    opacity: 0.15;
    filter: blur(80px);
    top: -20%;
    left: 20%;
    z-index: 1;
    animation: pulse 10s infinite alternate;
  }

  @keyframes pulse {
    from {
      transform: scale(1);
      opacity: 0.1;
    }
    to {
      transform: scale(1.2);
      opacity: 0.2;
    }
  }

  .hero-content {
    position: relative;
    z-index: 10;
    max-width: 1200px;
    width: 100%;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
  }

  .branding {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: var(--sl-font-display);
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    font-size: 0.875rem;
    padding: 0.5rem 1.5rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 99px;
    backdrop-filter: blur(10px);
    color: var(--sl-color-gray-2);
  }

  .branding .aether-lens {
    color: var(--sl-color-white);
  }

  .branding .by {
    opacity: 0.5;
    font-weight: 400;
    font-size: 0.75rem;
  }

  .carousel {
    width: 100%;
    max-width: 900px;
    position: relative;
  }

  .carousel-inner {
    position: relative;
    height: 280px; /* Base height to prevent jump */
  }

  .slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    pointer-events: none;
  }

  .slide.active {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  h1 {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -0.03em;
  }

  .gradient-text {
    background: var(--color-aether-gradient);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    display: inline-block;
  }

  .sub-heading {
    font-size: clamp(1.25rem, 3vw, 2rem);
    font-weight: 600;
    color: var(--sl-color-gray-2);
    margin-bottom: 1rem;
  }

  .detail-text {
    font-size: 1.125rem;
    color: var(--sl-color-gray-3);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .carousel-nav {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    margin-top: 2rem;
  }

  .nav-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    border: none;
    padding: 0;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .nav-dot.active {
    background: var(--color-aether-primary);
    transform: scale(1.3);
    box-shadow: 0 0 15px var(--color-aether-primary);
  }

  .hero-actions {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
  }

  /* Visual Anchor: Terminal Mockup */
  .visual-anchor {
    width: 100%;
    max-width: 800px;
    margin-top: 2rem;
    perspective: 1000px;
  }

  .terminal-window {
    background: #0f172a;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    box-shadow: var(--shadow-premium);
    overflow: hidden;
    transform: rotateX(5deg);
    transition: transform 0.5s ease;
  }

  .terminal-window:hover {
    transform: rotateX(0deg) translateY(-5px);
  }

  .terminal-header {
    background: rgba(255, 255, 255, 0.05);
    padding: 0.75rem 1rem;
    display: flex;
    align-items: center;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .terminal-header .buttons {
    display: flex;
    gap: 6px;
  }

  .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }
  .dot.red {
    background: #ef4444;
  }
  .dot.yellow {
    background: #f59e0b;
  }
  .dot.green {
    background: #10b981;
  }

  .terminal-title {
    flex-grow: 1;
    text-align: center;
    font-size: 0.75rem;
    color: var(--sl-color-gray-3);
    font-family: var(--sl-font-mono, monospace);
    opacity: 0.8;
  }

  .terminal-body {
    padding: 1.5rem;
    text-align: left;
    font-family: var(--sl-font-mono, monospace);
    font-size: 0.9rem;
    line-height: 1.7;
    color: #e2e8f0;
  }

  .line {
    margin-bottom: 0.25rem;
  }
  .cmd {
    color: #60a5fa;
    font-weight: bold;
  }
  .success {
    color: #10b981;
  }
  .info {
    color: #3b82f6;
    font-weight: bold;
  }
  .highlight {
    color: #c084fc;
    font-weight: bold;
  }
  .type {
    color: #f472b6;
  }
  .insight {
    color: #fbbf24;
    font-weight: bold;
    background: rgba(251, 191, 36, 0.1);
    padding: 2px 6px;
    border-radius: 4px;
  }
  .path {
    color: #94a3b8;
    font-style: italic;
  }

  .cursor {
    display: inline-block;
    width: 8px;
    height: 1.2em;
    background: #60a5fa;
    vertical-align: middle;
    margin-left: 4px;
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    50% {
      opacity: 0;
    }
  }

  @media (max-width: 768px) {
    .hero-wrapper {
      padding: 4rem 1rem;
    }
    .carousel-inner {
      height: 380px;
    }
    .hero-actions {
      flex-direction: column;
      width: 100%;
      align-items: stretch;
    }
  }
</style>
