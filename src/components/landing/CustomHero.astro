---
const { tagline, actions = [] } = Astro.props;
import { LinkButton } from "@astrojs/starlight/components";

const slides = [
  {
    title: "Vibe Test Insight",
    sub: "Semantic Engine v2.0",
    detail:
      "コードの変化を「意味」として抽出。AIが自律的に最適な検証シナリオを選択・実行します。",
  },
  {
    title: "Cost Efficient",
    sub: "NPU Accelerated Loop",
    detail:
      "ローカル NPU での蒸留処理により、クラウド送信データを 1/100 に削減。無限の検証を圧倒的コストパフォーマンスで。",
  },
  {
    title: "Nightly Stream",
    sub: "Rapid Evolution Loop",
    detail:
      "現在 b921c8d (Nightly) が稼働中。開発者のフィードバックを即座に機能へ反映する爆速リリースサイクル。",
  },
  {
    title: "MCP Synergy",
    sub: "Layered Intel Sync",
    detail:
      "階層化コンテキストを MCP 経由で共有。AI エージェントと視覚・論理をリアルタイムに同期させます。",
  },
];
---

<div class="hero-wrapper">
  <div class="glow-sphere"></div>
  <div class="scanning-bar"></div>

  <div class="hero-content">
    <div class="branding">
      <div class="badge-nightly">Nightly b921c8d</div>
      <span class="aether-lens">Aether Lens</span>
      <span class="separator">|</span>
      <span class="new-value">Unified Insights</span>
    </div>

    <div class="carousel" id="hero-carousel">
      <div class="carousel-inner">
        {
          slides.map((slide, index) => (
            <div
              class={`slide ${index === 0 ? "active" : ""}`}
              data-index={index}
            >
              <h1 class="gradient-text">{slide.title}</h1>
              <p class="sub-heading">{slide.sub}</p>
              <p class="detail-text">{slide.detail}</p>
            </div>
          ))
        }
      </div>

      <div class="carousel-nav">
        {
          slides.map((_, index) => (
            <button
              class={`nav-dot ${index === 0 ? "active" : ""}`}
              data-index={index}
              aria-label={`Go to slide ${index + 1}`}
            />
          ))
        }
      </div>
    </div>

    <div class="hero-actions">
      {
        actions.map((action: any) => (
          <LinkButton
            href={action.link}
            variant={action.variant}
            icon={action.icon}
          >
            {action.text}
          </LinkButton>
        ))
      }
    </div>

    <div class="visual-anchor">
      <div class="lens-scanner">
        <div class="scanner-circle"></div>
      </div>
      <div class="terminal-window">
        <div class="terminal-header">
          <div class="buttons">
            <span class="dot red"></span>
            <span class="dot yellow"></span>
            <span class="dot green"></span>
          </div>
          <div class="terminal-title">
            aether-lens-cli check --target=premium
          </div>
        </div>
        <div class="terminal-body">
          <div class="line">
            <span class="cmd">aether-lens</span> check <span class="success"
              >✔ b921c8d</span
            >
          </div>
          <div class="line">
            <span class="info">HW</span> NPU detected: <span class="type"
              >Active (vTI-8)</span
            >
          </div>
          <div class="line">
            <span class="highlight">Analyze Intent:</span> Refactoring CustomHero
            UI
          </div>
          <div class="line">
            Distilling data... <span class="success">99.8% token saved</span>
          </div>
          <div class="line">
            <span class="insight">Insight:</span> "Aesthetics match premium standards.
            Verified in 250ms."
          </div>
          <div class="cursor"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const carousel = document.getElementById("hero-carousel");
  if (carousel) {
    const slides = carousel.querySelectorAll(".slide");
    const dots = carousel.querySelectorAll(".nav-dot");
    let currentIndex = 0;
    let interval: any;

    const showSlide = (index: number) => {
      slides.forEach((s) => s.classList.remove("active"));
      dots.forEach((d) => d.classList.remove("active"));

      slides[index].classList.add("active");
      dots[index].classList.add("active");
      currentIndex = index;
    };

    const nextSlide = () => {
      showSlide((currentIndex + 1) % slides.length);
    };

    const startAutoPlay = () => {
      interval = setInterval(nextSlide, 5000);
    };

    dots.forEach((dot) => {
      dot.addEventListener("click", () => {
        clearInterval(interval);
        const index = parseInt(dot.getAttribute("data-index") || "0");
        showSlide(index);
        startAutoPlay();
      });
    });

    startAutoPlay();

    // Scanning Lens mouse movement
    const wrapper = document.querySelector(".hero-wrapper");
    const scanner = document.querySelector(".scanner-circle");
    if (wrapper && scanner) {
      wrapper.addEventListener("mousemove", (e: any) => {
        const rect = wrapper.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        (scanner as HTMLElement).style.setProperty("--x", `${x}px`);
        (scanner as HTMLElement).style.setProperty("--y", `${y}px`);
      });
    }
  }
</script>

<style>
  .hero-wrapper {
    position: relative;
    width: 100vw;
    min-height: 95vh;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #020617; /* Slate 950 */
    overflow: hidden;
    padding: 6rem 2rem;
  }

  .scanning-bar {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 10px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--color-aether-accent),
      transparent
    );
    opacity: 0.3;
    animation: scan-y 8s ease-in-out infinite;
    z-index: 2;
    pointer-events: none; /* Ensure scanning bar doesn't block */
  }

  @keyframes scan-y {
    0% {
      top: 0;
    }
    100% {
      top: 100%;
    }
  }

  .glow-sphere {
    position: absolute;
    width: 70vw;
    height: 70vw;
    background: radial-gradient(
      circle,
      var(--color-aether-primary),
      transparent 70%
    );
    opacity: 0.12;
    filter: blur(100px);
    top: -10%;
    left: 15%;
    z-index: 1;
    animation: drift 20s linear infinite;
    pointer-events: none; /* Ensure sphere doesn't block */
  }

  @keyframes drift {
    0% {
      transform: translate(0, 0);
    }
    50% {
      transform: translate(5%, 5%);
    }
    100% {
      transform: translate(0, 0);
    }
  }

  .hero-content {
    position: relative;
    z-index: 10;
    max-width: 1200px;
    width: 100%;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2.5rem;
  }

  .branding {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-family: var(--sl-font-display);
    font-weight: 700;
    font-size: 0.85rem;
    padding: 0.4rem 1.2rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 99px;
    backdrop-filter: blur(12px);
    color: var(--sl-color-gray-2);
  }

  .badge-nightly {
    background: var(--color-aether-accent);
    color: #020617;
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 0.7rem;
    font-weight: 800;
    text-transform: uppercase;
  }

  .branding .aether-lens {
    color: #fff;
  }

  .carousel {
    width: 100%;
    max-width: 900px;
    position: relative;
  }

  .carousel-inner {
    position: relative;
    height: 260px;
  }

  .slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    opacity: 0;
    transform: scale(0.98) translateY(10px);
    transition: all 1s cubic-bezier(0.16, 1, 0.3, 1);
    pointer-events: none;
  }

  .slide.active {
    opacity: 1;
    transform: scale(1) translateY(0);
    pointer-events: auto;
  }

  h1 {
    font-size: clamp(3.5rem, 9vw, 6.5rem);
    font-weight: 900;
    line-height: 1.05;
    margin-bottom: 1.2rem;
    letter-spacing: -0.04em;
  }

  .gradient-text {
    background: linear-gradient(
      to right,
      #fff 20%,
      var(--color-aether-accent) 100%
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .sub-heading {
    font-size: clamp(1.5rem, 3.5vw, 2.25rem);
    font-weight: 700;
    color: var(--sl-color-gray-2);
    margin-bottom: 0.75rem;
    letter-spacing: -0.02em;
  }

  .detail-text {
    font-size: 1.125rem;
    color: var(--sl-color-gray-3);
    max-width: 640px;
    margin: 0 auto;
    line-height: 1.6;
    opacity: 0.8;
  }

  .carousel-nav {
    display: flex;
    justify-content: center;
    gap: 0.8rem;
    margin-top: 1.5rem;
    position: relative;
    z-index: 30; /* Ensure nav is above scanner */
  }

  .nav-dot {
    width: 40px;
    height: 3px;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    pointer-events: auto; /* Ensure clickable */
  }

  .nav-dot.active {
    background: var(--color-aether-accent);
    box-shadow: 0 0 10px var(--color-aether-accent);
  }

  .hero-actions {
    display: flex;
    gap: 1.5rem;
    margin-top: 1rem;
    position: relative;
    z-index: 30; /* Ensure actions are above scanner */
  }

  .visual-anchor {
    position: relative;
    width: 100%;
    max-width: 850px;
    margin-top: 2rem;
    perspective: 1200px;
  }

  .lens-scanner {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    pointer-events: none; /* CRITICAL: prevent blocking */
    z-index: 20;
  }

  .scanner-circle {
    position: absolute;
    width: 300px;
    height: 300px;
    border: 2px solid var(--color-aether-accent);
    border-radius: 50%;
    top: var(--y, 50%);
    left: var(--x, 50%);
    transform: translate(-50%, -50%);
    box-shadow:
      inset 0 0 30px rgba(6, 182, 212, 0.2),
      0 0 50px rgba(6, 182, 212, 0.1);
    backdrop-filter: contrast(1.2) brightness(1.1);
    transition:
      top 0.1s ease-out,
      left 0.1s ease-out;
    pointer-events: none; /* CRITICAL: prevent blocking */
  }

  .terminal-window {
    background: rgba(15, 23, 42, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    box-shadow: 0 50px 100px -20px rgba(0, 0, 0, 0.7);
    overflow: hidden;
    transform: rotateX(8deg);
    backdrop-filter: blur(20px);
  }

  .terminal-header {
    background: rgba(255, 255, 255, 0.03);
    padding: 0.8rem 1.2rem;
    display: flex;
    align-items: center;
  }

  .terminal-body {
    padding: 2rem;
    text-align: left;
    font-family: var(--sl-font-mono, monospace);
    font-size: 0.95rem;
    color: #cbd5e1;
  }

  .success {
    color: #10b981;
  }
  .highlight {
    color: #818cf8;
    font-weight: bold;
  }
  .insight {
    color: #fbbf24;
    background: rgba(251, 191, 36, 0.1);
    padding: 4px 8px;
    border-radius: 6px;
  }

  @media (max-width: 768px) {
    .carousel-inner {
      height: 400px;
    }
    .hero-actions {
      flex-direction: column;
      width: 100%;
    }
    .scanner-circle {
      display: none;
    }
  }
</style>
